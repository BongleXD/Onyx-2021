            <systemPath>${pom.basedir}/lib/PotatoSpigot-1.8.8.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.blastmc.spigot.v1_8_R3</groupId>
            <artifactId>potatospigot-server</artifactId>
            <version>1.8.8-R0.1-SNAPSHOT</version>
