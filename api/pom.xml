            <artifactId>potatospigot-api</artifactId>
            <version>1.12.2-R0.1-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/PotatoSpigot-1.12.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.blastmc.spigot.v1_12_R1</groupId>
            <artifactId>potatospigot-server</artifactId>
            <version>1.12.2-R0.1-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/PotatoSpigot-1.12.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.blastmc.spigot.v1_8_R3</groupId>
